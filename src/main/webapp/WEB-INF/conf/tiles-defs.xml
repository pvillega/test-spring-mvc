<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="base" template="/WEB-INF/layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/head.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
        <put-attribute name="title"/>
        <put-attribute name="body"/>
    </definition>

    <definition name="hello" extends="base">
        <put-attribute name="body" value="/WEB-INF/pages/hello.jsp"/>
        <put-attribute name="title" value="Hello"/>
    </definition>
</tiles-definitions>